<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TweetTail.Menu.MenuPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblBlendStatus"
                Text="잉여 병합계정 사용중"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <ListView x:Name="listView"
                      SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Text="{Binding Title}" Detail="{Binding Description}" ImageSource="{Binding Icon}"></ImageCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>