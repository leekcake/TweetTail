<?xml version="1.0" encoding="utf-8" ?>
<tabbedpageexpanded:TabbedPageEx
            xmlns:tabbedpageexpanded="clr-namespace:TweetTail.Controls.TabbedPageExpanded"
            xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:status="clr-namespace:TweetTail.Pages.Status"
            xmlns:notification="clr-namespace:TweetTail.Pages.Notification"
            BarBackgroundColor="{DynamicResource backgroundColor}"
            BarTextColor="{DynamicResource textColor}"
            x:Class="TweetTail.Pages.SingleTailPage">
  <!--Pages can be added as references or inline-->
    <status:TimelinePage x:Name="TimelinePage" Title="타임라인" Icon="ic_timeline_green_300_48dp" />
    <status:MentionPage x:Name="MentionPage" Title="멘션" Icon="ic_forum_grey_500_48dp" />
    <notification:NotificationPage x:Name="NotificationPage" Title="알림" Icon="ic_notifications_grey_500_48dp" />
</tabbedpageexpanded:TabbedPageEx>