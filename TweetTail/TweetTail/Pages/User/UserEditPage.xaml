<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="TweetTail.Pages.User.UserEditPage">
    <ContentPage.Content>
        <StackLayout>
            <forms:CachedImage x:Name="BannerImage"  Aspect="AspectFill" HorizontalOptions="Fill"></forms:CachedImage>
            <forms:CachedImage x:Name="ProfileImage"></forms:CachedImage>
            <Label Text="닉네임"></Label>
            <Editor x:Name="NickNameEditor"></Editor>
            <Label Text="설명"></Label>
            <Editor x:Name="DescriptionEditor"></Editor>
            <Label Text="위치"></Label>
            <Editor x:Name="LocationEditor"></Editor>
            <Label Text="링크"></Label>
            <Editor x:Name="URLEditor"></Editor>
            <Button x:Name="UpdateButton" Text="수정하기" Clicked="UpdateButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>