<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:checkable="clr-namespace:TweetTail.Components.Account.Checkable"
             Style="{DynamicResource backgroundStyle}"
             x:Class="TweetTail.Pages.Blend.BlendEditPage">
    <ContentPage.Content>
        <StackLayout>
            <Editor Style="{DynamicResource editorStyle}" x:Name="NameEditor" Placeholder="이름"></Editor>
            <checkable:CheckableAccountListView x:Name="CheckableAccountListView" SelectionMode="Single"></checkable:CheckableAccountListView>
            <Button x:Name="ConfirmButton" Text="만들기" Clicked="ConfirmButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>